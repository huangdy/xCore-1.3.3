	<build>
		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources-test-1</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/src/test/resources/contexts</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/../../infrastructure/src/main/config/contexts</directory>
									<includes>
										<include>**/test-spring-ws-servlet.xml</include>
										<include>**/msgRcvrContext.xml</include>
										<include>**/test-dataSrcContext.xml</include>
										<include>**/mssql-dataSrcContext.xml</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources-test-2</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
