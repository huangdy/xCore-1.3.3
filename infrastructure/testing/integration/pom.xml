							<resources>
								<resource>
									<directory>${basedir}/../../infrastructure/src/main/config/contexts</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources-test-3</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/src/test/resources/META-INF</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/../../infrastructure/src/main/config/META-INF</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.4.2</version>
				<configuration>
					<!-- forkMode and MaxPermSize are set to overcome OutOfMemory exceptions -->
					<forkMode>once</forkMode>
					<argLine>-XX:MaxPermSize=256M</argLine>
				</configuration>
			</plugin>
